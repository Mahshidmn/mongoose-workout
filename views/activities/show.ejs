<%- include('../partials/header') %>

<h2 class="fs-4 fw-bold text-bg-dark p-2 text-center">Activitiy Details</h2>

<!-- another table style, each row contains table head and table data -->
<section id="show-page">
    <table class="table">
      <tbody>
        <tr>
          <th scope="row"><strong>Title:</strong></th>
          <td><%= activity.title %></td>
        </tr>
        <tr>
          <th scope="row"><strong>Date:</strong></th>
          <td><%= activity.date.toDateString() %></td>
        </tr>
        <tr>
          <th scope="row"><strong>Duration:</strong></th>
          <td><%= activity.duration %></td>
        </tr>
        <tr>
          <th scope="row"><strong>Sets:</strong></th>
          <td><%= activity.sets %></td>
        </tr>
        <tr>
          <th scope="row"><strong>Best KG:</strong></th>
          <td><%= activity.bestKg %></td>
        </tr>
        <tr>
          <th scope="row"><strong>Workouts:</strong></th>
          <td>
            <ul>
              <%- activity.workouts.map(w => `<li>${w.title}</li>`).join('') %>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
  
  
<form class="add-to-activity-form" id="add" action="/activities/<%= activity._id %>/workouts" method="POST">
  <div class="mb-3"> 
  <select name="workoutId">
    <%- workouts.map(w =>
      `<option value="${w._id}">${w.title}</option>`) %>
  </select>
  <button type="submit" class="btn btn-primary btn-shadow btn-sm">Add Workout</button>
</div> 
</form>




<%- include('../partials/footer') %>