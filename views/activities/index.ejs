<%- include('../partials/header') %>

<h2 class="fs-4 fw-bold text-bg-dark p-2 text-center">Activities</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Info</th>
    </tr>
  </thead>
  <tbody>
   
    <% activities.forEach(function(a) { %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.date %></td>
        <td><a href="/activities/<%= a._id %>">Details</a></td>
      </tr>
   
    <% }); %>
  </tbody>
</table>



<%- include('../partials/footer') %>