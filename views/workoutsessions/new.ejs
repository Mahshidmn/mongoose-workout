<%- include('../partials/header') %>

<h2 class="fs-4 fw-bold text-bg-dark p-2 text-center">Add Workout Session</h2>
<form id="add-form" action="/workoutsessions" method="POST">
    
    <label class="text-end">Title:</label>
  <input type="text" name="title" >

  <label class="text-end">Difficulty:</label>
  <select name="difficulty">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Advance">Advance</option>
  </select>
  <label class="text-end">Location Type:</label>
  <select name="locationType">
    <option value="Gym">Gym</option>
    <option value="home">Home</option>
  </select>
  
  <input type="submit" class="btn btn-primary btn-shadow" value="Add Session">
</form>


<%- include('../partials/footer') %>